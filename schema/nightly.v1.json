{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["schema", "config_snapshot", "stats", "plots"],
  "properties": {
    "schema": { "const": "nightly.v1" },
    "config_snapshot": { "type": "object" },
    "stats": {
      "type": "object",
      "required": ["mean", "corr"],
      "properties": {
        "mean": {
          "type": "object",
          "required": ["S", "H", "rho", "I"]
        },
        "corr": {
          "type": "object",
          "required": ["rho_I"]
        }
      }
    },
    "tuning_suggestion": { "type": "object" },
    "plots": {
      "type": "object",
      "required": ["ignition_timeseries", "rho_vs_I_scatter", "memory_graph", "affective_map"],
      "properties": {
        "ignition_timeseries": { "type": "string" },
        "rho_vs_I_scatter": { "type": "string" },
        "memory_graph": { "type": "string" },
        "affective_map": { "type": "string" },
        "culture_resonance": { "type": "string" },
        "culture_trend": { "type": "string" },
        "resonance_objective": { "type": "string" },
        "resonance_bayes_trace": { "type": "string" },
        "vision_counts": { "type": "string" },
        "vision_pose": { "type": "string" }
      },
      "additionalProperties": { "type": "string" }
    },
    "affective_stats": {
      "type": "object",
      "properties": {
        "valence": { "type": "object" },
        "arousal": { "type": "object" }
      }
    },
    "vision_snapshot": {
      "type": "object",
      "properties": {
        "events": { "type": "number" },
        "detections_total": { "type": "number" },
        "counts_by_kind": {
          "type": "object",
          "additionalProperties": { "type": "number" }
        },
        "mean_valence": { "type": "number" },
        "mean_arousal": { "type": "number" },
        "mean_dominance": { "type": "number" },
        "pose_mean": {
          "type": "object",
          "additionalProperties": { "type": "number" }
        },
        "fps_mean": { "type": "number" },
        "ts_last": { "type": "number" },
        "last_event": { "type": "object" }
      }
    },
    "resonance_history_path": { "type": "string" },
    "resonance_bayes_trace_path": { "type": "string" },
    "culture_history_path": { "type": "string" },
    "policy_feedback": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "politeness_before": { "type": "number" },
        "politeness_after": { "type": "number" },
        "delta": { "type": "number" },
        "intimacy_before": { "type": "number" },
        "intimacy_after": { "type": "number" },
        "intimacy_delta": { "type": "number" },
        "corr": { "type": "number" },
        "corr_source": { "type": ["string", "null"] },
        "reason": { "type": "string" },
        "reference_tag": { "type": "string" },
        "reference_rho": { "type": "number" },
        "reference_valence": { "type": "number" },
        "alerts": {
          "type": "array",
          "items": { "type": "string" }
        },
        "vision_adjustment": {
          "type": "object",
          "properties": {
            "politeness_delta": { "type": "number" },
            "intimacy_delta": { "type": "number" },
            "details": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "kind": { "type": "string" },
                  "count": { "type": "number" },
                  "effective": { "type": "number" },
                  "normalize": { "type": "string" },
                  "politeness_delta": { "type": "number" },
                  "intimacy_delta": { "type": "number" }
                }
              }
            },
            "counts_by_kind": {
              "type": "object",
              "additionalProperties": { "type": "number" }
            },
            "normalisers": {
              "type": "object",
              "properties": {
                "events": { "type": "number" },
                "detections": { "type": "number" }
              }
            }
          }
        }
      }
    },
    "culture_stats": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "count": { "type": "number" },
          "mean_valence": { "type": "number" },
          "mean_arousal": { "type": "number" },
          "mean_rho": { "type": "number" },
          "mean_politeness": { "type": "number" },
          "mean_intimacy": { "type": "number" }
        },
        "required": ["count", "mean_valence", "mean_arousal", "mean_rho"]
      }
    },
    "resonance": {
      "type": "object",
      "properties": {
        "pairs": { "type": "array" },
        "corr": { "type": "number" },
        "corr_ci95": { "type": "array", "items": { "type": "number" } },
        "lag": { "type": "number" },
        "lag_refined": { "type": "number" },
        "energy": { "type": "number" },
        "n_eff": { "type": "number" },
        "objective": { "type": "number" },
        "partial_corr": { "type": "number" },
        "granger": {
          "type": "object",
          "properties": {
            "lag": { "type": "integer" },
            "a_to_b_f": { "type": "number" },
            "b_to_a_f": { "type": "number" }
          }
        }
      }
    },
    "policy_feedback_history_path": { "type": "string" },
    "alerts": {
      "type": "array",
      "items": { "type": "string" }
    },
    "alerts_detail": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "kind": { "type": "string" },
          "tag": { "type": "string" },
          "value": { "type": "number" },
          "threshold": { "type": "number" },
          "pair": { "type": "array" }
        }
      }
    }
  }
}
